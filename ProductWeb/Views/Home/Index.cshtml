@model IEnumerable<Product>

<div class="progress">
  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 100%;"style="width: 100%;"></div>
</div>
<br />

<div class="row">
    @foreach (var item in Model)
    {
        var ListPrice = item.Price + (item.Price * 0.5);
        <div class="col-3">
            <div class="card mb-3 bg-secondary">
                <h3 class="card-header">ID Product : @item.Id</h3>
                <div class="card-body">
                    <h5 class="card-title">Name : @item.Name</h5>                    
                </div>

                <img src="@item.ImageUrl" class="d-block user-select-none" width="100%" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle"/>

                <div class="card-body">
                    <p class="card-text">@Html.Raw(item.Description)</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">List Price : <strike>@(ListPrice.ToString(".00"))</strike></li>
                    <li class="list-group-item">As low as : @item.Price</li>
                    
                </ul>
                <div class="card-body">
                    <a asp-action="Details" asp-route-productId="@item.Id" class="btn btn-danger w-100">Detail</a>                    
                </div>
                <div class="card-footer text-muted">
                    My shop
                </div>
            </div>
        </div>
    }
</div>
