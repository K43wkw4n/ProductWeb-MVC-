@model IEnumerable<Category>

<div>
    <div class="row bg-warning p-1">
        <div class="col-6 m-auto text-dark">Category List</div>
        <div class="col-6 text-end">
            <a class="btn btn-outline-success" asp-action="CreateAndUpdate">
                <i class="bi bi-plus-circle-fill"></i>
            </a>
        </div>
    </div>

    <table class="table table-hover" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>createData</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.CreatedDateTime</td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="CreateAndUpdate"
                       asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"
                       onclick="return confirm('Are you sure')">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
<script>
        $(document).ready( function () {
        $('#myTable').DataTable();
    } );
</script>

}